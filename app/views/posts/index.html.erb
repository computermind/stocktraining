
<div class = "container">
<% @posts.each do |post| %>
<%= link_to post.user.user_name %><br>
<%= post.caption %><br>
<%= distance_of_time_in_words(post.created_at, Time.now, include_seconds: true) %><br>
<%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %><br>
<% post.comments.each do |comment| %>
        <%= link_to comment.user.user_name %>
    <%= comment.content %><br>
<% end %>
<% end %>
</div>